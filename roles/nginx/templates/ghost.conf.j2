server {
	listen 0.0.0.0:80;
	server_name {{ blog_name }};
	access_log /var/log/nginx/{{ blog_name }}.log;

	location / {
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header HOST $http_post;
		proxy_set_header X-NginX-Proxy true;

		proxy_pass http://127.0.0.1:2368;
		proxy_redirect off;
	}

}
